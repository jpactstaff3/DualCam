<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <RelativeLayout
		android:id="@+id/addCamPreview"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">

        <FrameLayout
	       android:id="@+id/cumshot"
	       android:layout_width="wrap_content"
	       android:layout_height="match_parent"
	       android:layout_weight="1" >

   		</FrameLayout>
	</RelativeLayout>
	
	<RelativeLayout
		android:id="@+id/buttonLayout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    <LinearLayout 
			android:id="@+id/picLayout"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:padding="0dp"
		    android:orientation="vertical">
		    <LinearLayout
				android:id="@+id/top"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="1">
				    <ImageView
			           android:id="@+id/cumPreviewBack"
			           android:layout_width="match_parent"
			           android:layout_height="match_parent"
			           android:src="@drawable/previewback"
			           android:background="#ffffff" 
			           android:adjustViewBounds="true"/>
		    </LinearLayout>
			<LinearLayout
				android:id="@+id/bottom"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="1">
				<ImageView
		           android:id="@+id/cumPreviewFront"
		           android:layout_width="match_parent"
		           android:layout_height="match_parent"
		           android:src="@drawable/previewfront" 
		           android:background="#ffffff"
		           android:adjustViewBounds="true"
		           />  
	        </LinearLayout>
		</LinearLayout>
		<ImageView
           android:id="@+id/smileyButton"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           android:src="@drawable/shoot" />
		
		<LinearLayout 
		    android:id="@+id/utlityButtonLayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true">
		
		    <ImageView
		        android:id="@+id/shareButton"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:src="@drawable/network" 
		        android:clickable="false"/>
		
		    <ImageView
		        android:id="@+id/saveButton"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:src="@drawable/save" 
		        android:clickable="false"/>
		    <ImageView
		        android:id="@+id/blankButton"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:clickable="false"/>
		    <ImageView
		        android:id="@+id/retryButton"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:src="@drawable/retry" 
		        android:clickable="false"/>
		</LinearLayout>
	</RelativeLayout>
   
</RelativeLayout>